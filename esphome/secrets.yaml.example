# ESPHome Secrets â€” Xenopixel Lightsaber Proxy
# Copy to secrets.yaml and fill in your values.
#
# After editing, compile the YAML matching your saber count:
#   1 saber:  esphome run xenopixel_1saber.yaml
#   2 sabers: esphome run xenopixel_2sabers.yaml

# WiFi credentials
wifi_ssid: "your_wifi_ssid"
wifi_password: "your_wifi_password"

# Fallback AP password (used when WiFi connection fails)
ap_password: "fallback_password"

# Home Assistant API encryption key
# Generate with: openssl rand -base64 32
api_encryption_key: "your_api_encryption_key_here"

# OTA update password
ota_password: "your_ota_password"

# Saber 1 (required)
saber1_mac: "AA:BB:CC:DD:EE:FF"
saber1_name: "Saber 1"

# Saber 2 (only needed if using xenopixel_2sabers.yaml)
saber2_mac: "11:22:33:44:55:66"
saber2_name: "Saber 2"
